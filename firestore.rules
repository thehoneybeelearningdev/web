rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read all documents
    match /{document=**} {
      allow read: if true;
    }
    
    // Only allow authenticated admins to write to courses collection
    match /courses/{courseId} {
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Only allow authenticated admins to write to advancedCourses collection
    match /advancedCourses/{courseId} {
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Allow authenticated users to read and write notifications (temporary for testing)
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
  }
}